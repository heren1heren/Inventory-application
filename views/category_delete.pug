extends layout


block content 
    h1=title
    hr
    h4 Category Name: #{category.name} 
    h4 Category Description: #{category.description}
    if itemsByCategory.length
        p Deleting all following items to delete this category
        ul
        each item in itemsByCategory
            li #{item.name}
                p url: 
                    a(href=item.url) #{item.url}
    p Do you want to delete this category?

    form(method="POST")

        button.btn.btn-primary(type='submit') Delete
        // click button will trigger Post request
