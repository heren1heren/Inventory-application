
extends layout

block content

  h1= title
  hr
  form(Method='POST')
   div.form-group
     label(for='name') Name:
     input#name.form-control(type='text' placeholder='namy' name='name' required=true)
     hr
     label(for='description') Description:
     input#description.form-control(type='text' placeholder='describe me' name='description' required=true)
     hr
     button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li= error.msg
